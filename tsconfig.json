{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "build",
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2020",
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "typeRoots": [
            "src/types",
            "node_modules/@types/"
        ],
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@configs/*": [
                "src/config/*"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@seeds/*": [
                "src/seeds/*"
            ],
            "@db": [
                "src/db/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.cjs",
        "swc.config.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "__tests__",
        "coverage"
    ]
}